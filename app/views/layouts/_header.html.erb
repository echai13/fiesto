<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <%= link_to image_tag("fiesto.ico", size: "20x20", id: "hat-icon"), root_path %>
      <%= link_to "Fiesto", root_path, id: "logo" %>
      <ul class="nav navbar-nav navbar-right">
        <li class="navbutton"><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
          <li class="navbutton"><%= link_to "Users", users_path %></li>
          <% end %>
          <li class="dropdown" id = "nav-dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <% if !current_user.verify %>
                <li><%= link_to "Verify Identity", verify_path %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Sign Up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
