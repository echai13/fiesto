<%= bootstrap_form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.text_field :name,label: "Name"%>
  </div>

  <div class="field">
    <%= f.date_select :date, label: "Date"%>
  </div>

  <div class="field">
      <%= f.time_select :time, {minute_step: 5}, label: "Time"%>
  </div>

  <div class="field">
    <%= f.text_field :location, label: "Location"%>
  </div>

  <div class="field">
    <%= f.number_field :price, :step => 0.01 %>
  </div>

  <div class="field">
    <%= f.file_field :avatar %>
  </div>

    <%= render 'bank_account', f: f %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
