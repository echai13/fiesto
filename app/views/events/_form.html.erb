<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :event_host => current_user.id %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.time_select :time %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, :step => 0.01 %>
  </div>

  <div class="field">
    <%= f.label :picture %><br>
    <%= f.file_field :avatar %>
  </div>

  <% if !current_user.account_id? %>
    <%= render 'bank_account', f: f %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
