<%= video_tag "people-partying", autoplay: true, muted: true, loop: true, class: "video" %>
<p class="new-event">
<% if logged_in? %>
  <%= link_to 'New Event', new_event_path, class: "new-button" %>
<% end %>
</p>

<h1 class="party-sort">Most Popular Parties</h1>
<div class="col-md-12 all-events">
    <% @event = Event.all.order('attendees DESC') %>
    <% @counter = 0 %>
    <% @event.each do |event| %>
      <% if @counter < 3 %>
      <div class="own-event">
        <div class="color-box">
        <p><%= image_tag event.avatar.url(:thumb) %></p>
        <p><%= link_to "#{event.name}", event %></p>
        <p><%= @ffs %></p>
        </div>
      </div>
      <% @counter += 1 %>
      <% end %>
    <% end %>
</div>


