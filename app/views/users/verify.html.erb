<%= form_tag verify_path do %>

  <%= label_tag 'Last 4-Digits of SSN' %>
  <%= number_field_tag :ssn, class: 'form-control', label: "Last 4-Digits of SSN" %>

  <%= label_tag 'Address Street 1' %>
  <%= text_field_tag :address_street1 %>

  <%= label_tag 'Address Street 2' %>
  <%= text_field_tag :address_street2 %>

  <%= label_tag 'Address City' %>
  <%= text_field_tag :address_city %>

  <%= label_tag 'Address State' %>
  <%= select_tag :address_state, options_for_select(us_states) %>

  <%= label_tag 'Address Postal Code' %>
  <%= number_field_tag :address_postal_code %>



  <%= submit_tag("Verify") %>
<% end %>
