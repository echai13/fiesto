<% provide(:title, "Log in") %>

<br>
<br>
<body>
  <div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Log In</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
		<div class="login-form">
			<div class="sign-in-htm">
        <%= form_for(:session, url: login_path) do |f| %>
				<div class="group">
          <%= f.label :username, class: 'label'%>
          <%= f.text_field :username, class: 'input' %>
				</div>
				<div class="group">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, class: 'input' %>
				</div>
				<div class="group">
          <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me, id: "remember-box"%>
          <span id="remember">Keep me Logged In!</span>
          <% end %>
				</div>
				<div class="group">
          <%= f.submit "Log in", class: "button" %>
				</div>
        <% end %>
        <div class="foot-lnk">
 					<%= link_to "Not a member yet? Sign up!", signup_path, id: "make_white"%>
 				</div>
			</div>
		</div>
	</div>
</div>


</body>
</html>
